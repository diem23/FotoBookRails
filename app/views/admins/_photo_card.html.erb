<% ele = local_assigns[:ele] %>
<div class=" d-flex flex-row justify-content-center ">
    <div class="img-item">
        <%=render '/shared/display_image', ele: ele.image%>
        <div class="img-title d-flex justify-content-between">
            <div class="img-title-text" > 
                <p><%=ele.title%> </p>
            </div>
            <%= button_to edit_photo_path(ele.id), method: :get, class: "edit-btn" do %>
                <div class="d-inline-block"><i class="fa-solid fa-pen-to-square"></i></div>
            <% end %>
            
        </div>
    </div>
</div>