<%session[:failure_redirect]=manage_users_path%>
<div class="row admin-user-list">

<% if flash[:notice] %>                           
    <div aria-live="polite" aria-atomic="true" class="col-12 bg-dark position-relative bd-example-toasts">
        <div class="toast-container position-absolute top-0 end-0" id="toastPlacement" style="<%=(flash[:type]=='success')? 'background-color:green': 'background-color:red' %>">
            
            <div class="show" >
                <div class="my-toast">
                    <%= flash[:notice] %>
                </div>
            </div>
        </div>
    </div>
<% end %> 
    <div class="col-0 col-lg-2 d-none d-lg-flex flex-row justify-content-center mt-4">
        <ul class="d-inline-block nav-list" >
            <a href=<%=manage_photos_path%>>
                <li class="d-block mb-2">Manage Photos</li>
            </a>
            <a href=<%=manage_users_path%>>
                <li class="d-block mb-2">Manage Albums</li>
            </a>
            <a href="">
                <li class="d-block mb-2">Manage Users</li>
            </a>
        </ul>
    </div>
    <div class="col-12 col-lg-8 center-container d-flex flex-column align-items-center"> 
        <table class="table table-borderless">
        <thead class="header-user-table">
        <tr>
            <th scope="col" >First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Last Login</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
            <% @resources.find_each do |ele| %>
                <tr>
                    <th scope="row"><%=ele.firstName%></th>
                    <td><%=ele.lastName%></td>
                    <td><%=ele.email%></td>
                    <td>
                        <% if ele.last_sign_in_at %>
                            <%=ele.last_sign_in_at.strftime("%I:%M%p %d/%m/%Y").downcase%>
                        <% else %>
                            Have not signed in
                        <% end %>
                    </td>
                    <td>
                        <%= link_to admin_edit_user2_path(ele), method: :get, class: "btn save-btn" do %>
                            Edit
                        <% end %>
                        <%= link_to "/user2s/#{ele.id}", class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure?" } do %>
                            Delete
                        <% end %>
                        
                    </td>
                </tr>
            <% end %>
        
        </tbody>
    </table>
    <div class=" w-100 d-flex justify-content-center mt-4">
                        <%== pagy_bootstrap_nav(@pagy)%>
                        
                    </div>
    </div>
    <div class="col-0 col-lg-2"></div>
</div>
<script>
    function disappearToast(){
        setTimeout(function(){
            $('#toastPlacement').fadeOut();
        }, 3000);
    }
    <% if flash[:notice] %>
        disappearToast();
    <% end %>
</script>
<div class="row admin-photo-list">