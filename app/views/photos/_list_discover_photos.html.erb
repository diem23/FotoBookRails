<%resources = local_assigns[:resources]%>
<% if resources.empty? %>
    <div class="col-12 d-flex justify-content-center align-items-center mb-4 mt-4">
        <p>There is no photo</p>
    </div>
<% else %>
    <div id="photos" class="w-100 row">
        <%= turbo_frame_tag "photos", src: discover_photo_path(format: :turbo_stream), loading: :lazy %>
    </div>
    <% if user_signed_in? %>
        <% if @resources.next_page %>
            <%= turbo_frame_tag "load_more", src: discover_photo_path(page:  @resources.next_page, format: :turbo_stream), loading: :lazy %>
        <% end %>
    <% end %>
    
<% end %>