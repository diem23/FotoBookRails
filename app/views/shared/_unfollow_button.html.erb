<% id = local_assigns[:id] %>
<button class= "d-flex justify-content-center unfollow-btn-<%=id.to_s%> unfollow-btn" , id= "followButton">
    <span>Following</span>
    <p class="d-none"><%=id%></p>
</button>
<script>
    let unfollowBtns =  document.querySelectorAll('.unfollow-btn-<%=id.to_s%>')  
    unfollowBtns.forEach((btn)=>{
        btn.addEventListener('click',function stopPropagation(event){
            debounceFollow(unfollowAPI)(btn.querySelector('p').innerHTML)
    })
})
</script>