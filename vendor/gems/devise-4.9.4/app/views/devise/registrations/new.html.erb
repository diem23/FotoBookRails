<%= stylesheet_link_tag "signup" %>  
  <div class="container-content">
    <div class="signup-form">
      <h2>Fotobook Signup</h2>

      <div class="signup-box">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          
          <div class="w-100">
            <%= f.label :firstName %>
            <%= f.text_field :firstName, autofocus: true, autocomplete: "firstName" , class: "form-control", placeholder: "First Name"%>
            <% if resource.errors.has_key?(:firstName) %>
              <p class="error-message mb-0"> <%= resource.errors[:firstName].first %></p>
            <% end %>
          </div>
      
          <div class="field w-100">
            <%= f.label :lastName %>
            <%= f.text_field :lastName, autofocus: true, autocomplete: "lastName" , class: "form-control",placeholder: "Last Name"%>
            <% if resource.errors.has_key?(:lastName) %>
              <p class="error-message mb-0"> <%= resource.errors[:lastName].first %></p>
            <% end %>
          </div>
      
          <div class="field w-100">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "email123@gmail.com" %>
            <% if resource.errors.has_key?(:email) %>
              <p class="error-message mb-0"> <%= resource.errors[:email].first %></p>
            <% end %>
          </div>
      
          <div class="field w-100">
            <%= f.label :password %>
            
            <%= f.password_field :password, autocomplete: "new-password" , class: "form-control", placeholder: "Password"%>
            <% if resource.errors.has_key?(:password) %>
              <p class="error-message mb-0"> <%= resource.errors[:password].first %></p>
            <% end %>
          </div>
      
          <div class="field w-100">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "form-control", placeholder: "Password"%>
          </div>
      
          <div class="actions w-100 d-flex justify-content-center mt-1">
            <button type="submit" class="btn btn-primary px-4 py-2 ">Signup</button>
          </div> 
        <% end %>
      </div>
    </div>
  </div>
  
