<%= stylesheet_link_tag "login" %>  
<div class="container-content">
  <div class="login-form">
    <h2>Fotobook Login</h2>

    <div class="login-box">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
    
          <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"form-control", placeholder:"Enter email"%>
        </div>

        <div class="field">
    
          <%= f.password_field :password, autocomplete: "current-password", class:"form-control" ,placeholder:"Password"%>
        </div>

        <button type="submit" class="btn btn-primary px-4 py-2 ">Login</button>

      <% end %>
    <a href="#" class="mt-2">Forgot password?</a>
    </div>
    <a href="/users/sign_up">Create an account</a>
  </div>
</div>

